.piechart-svg
  height: 50%;
  width: 50%;
  +above('m')
    height: 100%;
    width: 100%;
  circle
    stroke-width: 1.5px
  .piechart-wheel
    stroke: #cccccc;
  .piechart-value
    stroke: mariGreen;
    transition-delay: 5s;
