#home
  background-color: bgColor;
  background-image: url('../assets/images/bg/bg_6.jpg');
  background-size: cover;
  background-position:left;
  height: 65vh
  padding: 0
  +above('m')
    background-position: center;

  my-home
    background-color: rgba(0, 0, 0, .4);
    height: 65vh;
    display: flex;
    -ms-flex-flow: row wrap;
    flex-flow: row wrap;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;

  .home_container
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;
    +above('m')
      flex-flow: row wrap;
    +mobile(orientation: landscape)
      flex-flow: row wrap;

.container__logo
  padding: 1em

img
  height: 120px
  width: 120px
  +mobile()
    height: 120px
    width: 120px
  +above('l')
    height:180px
    width: 180px
  +above('xl')
    height: 250px
    width: 250px

.container__text
  .title, .subtitle
    color: white
    margin: 0
    text-align: center;

  .title
    +below('s')
      font-size: 3em
    +mobile(orientation: landscape)
      font-size: 3em
  .subtitle
    +above('m')
      font-size: 2.5em
    +mobile(orientation: landscape)
      font-size: 1em
