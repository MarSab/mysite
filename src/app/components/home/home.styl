#home
  background-image: url("../assets/images/home_bg.png");
  background-size: cover;
  background-position: center;
  height: 70vh



  .home_container
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
    align-items: center;


.container__logo
  padding: 1em

img
  +below(1270px)
    height: 200px
    width: 200px

.container__text
  h1, h3
    color: white
    margin: 0
  h1
    font-size: 9.5em
    +below(1270px)
      font-size: 5em
  h3
    font-size: 2.5em
    font-weight: 400;
    +below(1270px)
      font-size: 1.5em;
