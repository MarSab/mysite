#work
  background: bgColor
  h1
    color: textColor
  h4
    color: mariGreen;
  timeline-panel
    border-bottom: mariGreen 5px solid;
    +below('m')
        &.bounce-in
          opacity:1;  /* make things invisible upon start */
          animation:fadeIn ease-in 1;  /* call our keyframe named fadeIn, use animattion ease-in and repeat it only 1 time */


timeline-badge
  &.work
    background-color: mariOrange
  for $i in 2..3
    &.work-{$i}
      background-color: lighten(mariOrange, ($i*4))
  +below('m')
    &.bounce-in
      opacity:1;  /* make things invisible upon start */
      animation:fadeIn ease-in 1;  /* call our keyframe named fadeIn, use animattion ease-in and repeat it only 1 time */


timeline-event
  +above('l')
    for $i in 2..3
      &.work-{$i} > li
        margin-top: ($i*-1em)
