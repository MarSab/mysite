#contacts
  background: bgColor;
  +above(1270px)
    padding: 2em 10em;


ng-map
  height: 15em
  width: 25em

.contacts
  &__container
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    align-items: center;

  &__links
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;
    +above('m')
      justify-content: space-around;

    &__half
        width: 100%;
        text-align: center;
        +above('l')
          flex: 0 1 65%
          text-align: left;
        &--icon
          display: flex;
          justify-content: center;
          +above('l')
            flex: 0 1 25%
          +above('m')
            text-align: center;
