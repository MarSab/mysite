#presentation
  background: bgColor;
  h4
    font-weight: normal;
    margin-bottom: 1em;
    margin-top: 0;
    +above('m')
      margin: 1.33em 0;
    a
      text-decoration: none;


md-icon.md-default-theme, md-icon
  color: mariOrange;

.presentation__container
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;


.presentation
  &__idCard
    +between('m', 'l')
      flex:  0 1 40%
    +at('l')
      flex: 0 1 45%
    +above('xl')
      flex: 0 1 25%

  &__about
    +above('m')
      flex:  0 1 40%
    &--interests
      display: flex;
      justify-content: space-around;
      align-items: center;
      .interest
        font-size: 2.5em

.id_card
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: stretch;
  +above('m')
    width: 20em
  &__row
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: flex-start;
    +above('m')
      justify-content: flex-start;
      width: 100%


  &__half
    flex-basis: auto
    +above('xl')
      flex-basis: auto
    &--icon
      flex-basis: 40%
      text-align: center;
